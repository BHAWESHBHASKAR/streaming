MODEL_ARMS_PATH=gun_detectionultimo.pt
MODEL_HELMET_PATH=helmet_detectionultimo.pt

# Alert Configuration (optional)
ALERT_BOT_HOST=127.0.0.1
ALERT_BOT_PORT=9999
